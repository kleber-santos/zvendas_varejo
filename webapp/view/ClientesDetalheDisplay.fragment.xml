<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	controllerName="arcelor.controller.ClientesDetalhe">
	
	<VBox class="sapUiSmallMargin">
		
