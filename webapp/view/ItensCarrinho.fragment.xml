<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog 
		noDataText="Produtos não encontrados"
		title="Visualizar Carrinho"
		search="handleSearch"
		confirm="handleClose"
		cancel="handleClose"
		items="{
			path : '/Itens',
			sorter : {
				path : 'Name',
				descending : false
			}
		}">
		<ColumnListItem>
			<cells>
				<ObjectIdentifier title="{Item}" text="{}" />
				<Text text="{Descricao}" />
				<Text text="{Preco}" />
				<ObjectNumber number="{Quantidade}" unit="{WeightUnit}" 
					state="{
							path: 'Quantidade',
							formatter: 'sap.m.sample.TableSelectDialog.Formatter.weightState'
					}" />
				<Input value="{Unidade}" editable="true" class="InputStyle" change="onCalculateProduct"/>
				<Text text="{}" />
				<Text text="{}" />
				<Select>
					<core:Item key="0" text="CIF Entrega"/>
					<core:Item key="1" text="EXW - Retira"/>
				</Select>
				<ObjectNumber
						number="{
							parts:[{path:'Price'},{path:'CurrencyCode'}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {showMeasure: false}
						}"
						unit="{CurrencyCode}" />
				<Button icon="sap-icon://sys-cancel-2" press="onDeleteSelectedItems"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="Código" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="Produto" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Right">
				<header>
					<Text text="Preço" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Qtde" />
				</header>
			</Column>
			<Column hAlign="Right">
				<header>
					<Text text="unid" />
				</header>
			</Column>
			<Column hAlign="Right">
				<header>
					<Text text="Tipo Frete" />
				</header>
			</Column>
			<Column hAlign="Right">
				<header>
					<Text text="SubTotal" />
				</header>
			</Column>
			<Column hAlign="Right">
				<header>
					<Text text="" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>