<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	controllerName="arcelor.controller.ClientesDetalhe">
	
	<VBox class="sapUiSmallMargin">
		
		<f:SimpleForm id="SimpleFormDisplay480_121211"
			editable="false"
			layout="ResponsiveGridLayout"
			labelSpanL="4"
			labelSpanM="12"
			title="Dados Pessoais"
			adjustLabelSpan="false"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="3"
			columnsM="3">
			<f:content>
				<core:Title text="" />
				<Label text="CPF/CNPJ" />
				<Text text="{Cpf}{Cnpj}"/>
				<Label text="Código Cliente"/>
				<Text id="read-Codcliente" text="{Codcliente}"/>
				<Label text="Rua" />
				<Input id="input-endereco" value="{Endereco}" />
				<Label text="Bairro"/>
				<Input id="input-Bairro" value="{Bairro}"/>
				<Label text="Cep"/>
				<Input id="input-Cep" value="{Cep}"/>
				<Label text="Classificação"/>
				<Input id="input-Classifcli" value="{Classifcli}"/>
				<Label text="CNAE"/>
				<Input id="input-Cnae" value=" "/>
				
				<core:Title text="" />
				<Label text=" "/>
				<Text text=" "/>
				<Label text="Nome"/>
				<Input id="input-nome" value="{Nome}"/>
				<Label text="Numero" />
				<Input id="input-numero" value="{Numero}" />
				<Label text="Cidade"/>
				<Input id="input-Cidade" value="{Cidade}"/>
				<Label text=" "/>
				<Text text=" "/>
				<Label text="Origem"/>
				<Input id="input-Origem" value="{Origem}"/>
				
				<core:Title text="" />
				<Label text="Data do Cadastro"/>
				<Text id="idDateTodayChange" text="08/11/2018"/>
				<Label text="Matriz"/>
				<Input
					id="productInput"
					type="Text"
					placeholder="Enter Product ..."
					showSuggestion="true"
					showValueHelp="true"
					valueHelpRequest="handleValueHelp"
					suggestionItems="{/ClientesSet}" >
					<suggestionItems>
						<core:Item text="{Codcliente}" />
					</suggestionItems>
				</Input>
				<Label text="Complemento"/>
				<Input id="input-Complemento" value="{Complemento}"/>
				<Label text="Estado"/>
				<Input id="input-Regiao" value="{Regiao}"/>
				<Label text=" "/>
				<Text text=" "/>
				<Label text="Setor Industrial" />
				<Input value="{Setoratividade}" />
			</f:content>
		</f:SimpleForm>	
		
		<f:SimpleForm id="SimpleFormDisplay480_121212"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Última Compra / Limite"
			labelSpanL="4"
			labelSpanM="12"
			adjustLabelSpan="false"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="2"
			columnsM="2">
			<f:content>
				
				<core:Title text="" />
				<HBox>
					<core:Icon src="sap-icon://cart" size="2.25rem"/>		
				</HBox>
				<Label text="Data última Compra" />
				<Text text="{path: 'Dtultcompra', type: 'sap.ui.model.type.Date', formatOptions: {UTC:true, pattern: 'dd/MM/yyyy'} }" />
				<Label text="Última Ordem Venda"/>
				<Link text="375883" press="handleLinkPress" /> 
			
				<core:Title text="" />
				<HBox>
					<core:Icon src="sap-icon://official-service" size="2.25rem"/>
				</HBox>
				<Label text="Limite de Crédito" />
				<Text text="R$ { path: 'Limitecreditocli',  type: 'sap.ui.model.odata.type.Decimal', constraints: {precision: 10, scale: 2} }" /> 
				<Label text="Limite AM Card" />
				<Text text="R$ { path: 'Limitecreditocard',  type: 'sap.ui.model.odata.type.Decimal', constraints: {precision: 10, scale: 2} }" />
				
			</f:content>
		</f:SimpleForm>	
		
		<f:SimpleForm id="SimpleFormDisplay480_121213"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Áreas de Vendas "
			labelSpanL="4"
			labelSpanM="12"
			adjustLabelSpan="false"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="3"
			columnsM="3">
			<f:content>
				
				<core:Title text="" />
				<Label text="Organização"/>
				<Select forceSelection="false" autoAdjustWidth="true">
					<core:Item key="0" text="Organização 1"/>
					<core:Item key="1" text="Organização 2"/>
					<core:Item key="2" text="Organização 3"/>
				</Select>
					
				<core:Title text="" />
				<Label text="Canal"/>
				<Select forceSelection="false" autoAdjustWidth="true">
					<core:Item key="0" text="Canal 1"/>
					<core:Item key="1" text="Canal 2"/>
					<core:Item key="2" text="Canal 3"/>
				</Select>
					
				<core:Title text="" />
				<Label text="Setor de Atividade"/>
				<Select forceSelection="false" autoAdjustWidth="true">
					<core:Item key="0" text="Setor 1"/>
					<core:Item key="1" text="Setor 2"/>
					<core:Item key="2" text="Setor 3"/>
				</Select>
				
			</f:content>
		</f:SimpleForm>	
		
		<f:SimpleForm id="SimpleFormDisplay480_121214"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Contatos"
			labelSpanL="4"
			labelSpanM="12"
			adjustLabelSpan="false"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="3"
			columnsM="3">
			<f:content>
				<Table id="ListContatosChange" items="{/modelData}" showNoData="true" fixedLayout="false" width="auto" growing="true">
					<columns>
						<Column id="nameColumn21" hAlign="Left">
							<Text id="nameColumnTitle12" text="Nome"/>
						</Column>
						<Column id="nameColumn22" hAlign="Left">
							<Text text="Telefone"/>
						</Column>
						<Column id="nameColumn24" hAlign="Left">
							<Text text="Email"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem press="onPress" type="Active">
							<cells>
								<Text text="{Nome}"/>
								<Text text="{Telefone}"/>
								<Text text="{Email}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>
		</f:SimpleForm>
		
		<f:SimpleForm id="SimpleFormDisplay480_121216"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Vincular Cliente"
			labelSpanL="4"
			labelSpanM="12"
			adjustLabelSpan="false"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="3"
			columnsM="3">
			<f:content>
				<Table id="ListVincularClientesChange" items="{/modelData}" showNoData="true" fixedLayout="false" width="auto" growing="true">
					<columns>
						<Column id="nameColumn30" hAlign="Left">
							<Text id="nameColumnTitle11" text="Recebedor Mercadoria"/>
						</Column>
						<Column id="nameColumn31" hAlign="Left">
							<Text text="Código"/>
						</Column>
						<Column id="nameColumn32" hAlign="Left">
							<Text text="Recebedor"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem press="onPress" type="Active">
							<cells>
								<Text text="{Nome}"/>
								<Text text="{Telefone}"/>
								<Text text="{Email}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>
		</f:SimpleForm>	
		
	</VBox>
</core:FragmentDefinition>